{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["@sablier/configs/biome"],
  "files": {
    "ignore": ["/dist/"],
    "include": ["*.js", "*.json", "*.jsonc", "*.ts"]
  },
  "overrides": [
    {
      "include": ["tests/*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noFocusedTests": "off"
          }
        }
      }
    }
  ]
}
